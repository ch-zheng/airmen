<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="update" type="com.chzheng.airmen.memos.UpdateMemo"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/indicator_airspeed"/>
        <!-- Display -->
        <TextView
            android:id="@+id/indicator_airspeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{String.valueOf(update.airspeed), default=0}"
            style="@style/Indicator"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/label_airspeed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/indicator_altitude"/>
        <TextView
            android:id="@+id/indicator_altitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{String.valueOf(update.altitude), default=0}"
            style="@style/Indicator"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/label_altimeter"
            app:layout_constraintStart_toEndOf="@id/indicator_airspeed"
            app:layout_constraintEnd_toStartOf="@id/indicator_direction"/>
        <TextView
            android:id="@+id/indicator_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{String.valueOf(update.bearing), default=0}"
            style="@style/Indicator"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintBottom_toTopOf="@id/label_compass"
            app:layout_constraintStart_toEndOf="@id/indicator_altitude"
            app:layout_constraintEnd_toEndOf="parent"/>
        <!-- Display Labels -->
        <TextView
            android:id="@+id/label_airspeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/airspeed"
            app:layout_constraintTop_toBottomOf="@id/indicator_airspeed"
            app:layout_constraintBottom_toTopOf="@id/slider_throttle"
            app:layout_constraintStart_toStartOf="@id/indicator_airspeed"
            app:layout_constraintEnd_toEndOf="@id/indicator_airspeed"/>
        <TextView
            android:id="@+id/label_altimeter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/altitude"
            app:layout_constraintTop_toBottomOf="@id/indicator_altitude"
            app:layout_constraintBottom_toTopOf="@id/slider_throttle"
            app:layout_constraintStart_toStartOf="@id/indicator_altitude"
            app:layout_constraintEnd_toEndOf="@id/indicator_altitude"/>
        <TextView
            android:id="@+id/label_compass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/compass"
            app:layout_constraintTop_toBottomOf="@id/indicator_direction"
            app:layout_constraintBottom_toTopOf="@id/slider_throttle"
            app:layout_constraintStart_toStartOf="@id/indicator_direction"
            app:layout_constraintEnd_toEndOf="@id/indicator_direction"/>
        <!-- Controls -->
        <TextView
            android:id="@+id/label_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/throttle"
            app:layout_constraintTop_toTopOf="@id/slider_throttle"
            app:layout_constraintBottom_toBottomOf="@id/slider_throttle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/slider_throttle" />
        <SeekBar
            android:id="@+id/slider_throttle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="200"
            app:layout_constraintTop_toBottomOf="@id/label_airspeed"
            app:layout_constraintBottom_toTopOf="@id/slider_altitude"
            app:layout_constraintStart_toEndOf="@id/label_throttle"
            app:layout_constraintEnd_toStartOf="@id/indicator_throttle"/>
        <TextView
            android:id="@+id/indicator_throttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/fake_figure"
            app:layout_constraintTop_toTopOf="@id/slider_throttle"
            app:layout_constraintBottom_toBottomOf="@id/slider_throttle"
            app:layout_constraintStart_toEndOf="@id/slider_throttle"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/label_altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/altitude"
            app:layout_constraintTop_toTopOf="@id/slider_altitude"
            app:layout_constraintBottom_toBottomOf="@id/slider_altitude"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/slider_altitude"/>
        <SeekBar
            android:id="@+id/slider_altitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="1000"
            app:layout_constraintTop_toBottomOf="@id/slider_throttle"
            app:layout_constraintBottom_toTopOf="@id/knob_direction"
            app:layout_constraintStart_toEndOf="@id/label_throttle"
            app:layout_constraintEnd_toStartOf="@id/indicator_set_altitude"/>
        <TextView
            android:id="@+id/indicator_set_altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/fake_figure"
            app:layout_constraintTop_toTopOf="@id/slider_altitude"
            app:layout_constraintBottom_toBottomOf="@id/slider_altitude"
            app:layout_constraintStart_toEndOf="@id/slider_altitude"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.chzheng.airmen.views.KnobView
            android:id="@+id/knob_direction"
            android:layout_width="128dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/slider_altitude"
            app:layout_constraintBottom_toTopOf="@id/toggle_engines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
        <!-- Switches -->
        <TextView
            android:id="@+id/label_engines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="@string/engines"
            android:checked="false"
            app:layout_constraintTop_toTopOf="@id/toggle_engines"
            app:layout_constraintBottom_toBottomOf="@id/toggle_engines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toggle_engines"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
        <Switch
            android:id="@+id/toggle_engines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            app:layout_constraintTop_toBottomOf="@id/knob_direction"
            app:layout_constraintBottom_toTopOf="@id/toggle_landing_gear"
            app:layout_constraintStart_toEndOf="@id/label_engines"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/label_landing_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="@string/landing_gear"
            app:layout_constraintTop_toTopOf="@id/toggle_landing_gear"
            app:layout_constraintBottom_toBottomOf="@id/toggle_landing_gear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/toggle_landing_gear"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
        <Switch
            android:id="@+id/toggle_landing_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/toggle_engines"
            app:layout_constraintStart_toEndOf="@id/label_landing_gear"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>
